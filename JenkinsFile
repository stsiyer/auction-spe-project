pipeline {
    agent any

    tools {
        nodejs 'nodejs'
    }

    environment {
        DOCKER_USERNAME = credentials('dockerhub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'test', credentialsId: 'github', url: 'https://github.com/stsiyer/auction-spe-project.git'
            }
        }

        stage('Install Dependencies') {
            parallel {
                stage('Install Client Dependencies') {
                    steps {
                        dir('frontend') {
                            sh 'npm install'
                        }
                    }
                }
                stage('Install Backend Dependencies') {
                    steps {
                        dir('backend') {
                            sh 'npm install'
                        }
                    }
                }
            }
        }

        stage('Build Project') {
            parallel {
                stage('Build Frontend') {
                    steps {
                        dir('frontend') {
                            sh 'npm run build'
                        }
                    }
                }
                stage('Build Backend') {
                    steps {
                        dir('backend') {
                            sh 'npm run build' // Adjust if there is a backend build script
                        }
                    }
                }
            }
        }

        stage('Build Docker Images') {
            parallel {
                stage('Build Frontend Docker Image') {
                    steps {
                        dir('frontend') {
                            sh 'docker build -t $DOCKER_USERNAME/frontend-app .'
                        }
                    }
                }
                stage('Build Backend Docker Image') {
                    steps {
                        dir('backend') {
                            sh 'docker build -t $DOCKER_USERNAME/backend-app .'
                        }
                    }
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    docker.withRegistry('', 'dockerhub-credentials') {
                        sh 'docker tag $DOCKER_USERNAME/frontend-app $DOCKER_USERNAME/frontend-app:latest'
                        sh 'docker push $DOCKER_USERNAME/frontend-app:latest'
                        
                        sh 'docker tag $DOCKER_USERNAME/backend-app $DOCKER_USERNAME/backend-app:latest'
                        sh 'docker push $DOCKER_USERNAME/backend-app:latest'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
